server {
    listen              443 ssl default_server;
    server_name         _;
    ssl_certificate     /etc/nginx/conf.d/verygoodproxy.cert;
    ssl_certificate_key /etc/nginx/conf.d/verygoodproxy.cert;
    ssl_protocols       TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    set_real_ip_from 0.0.0.0/0;
    real_ip_header X-Forwarded-For;
    real_ip_recursive on;

    rewrite ^/$ {{ cert_mgr_url }}/docs/cname.html redirect;
}

server {
    listen              80;
    server_name         ~^(?<tenant>.+)\.(?<environment>(live|sandbox))\.verygoodproxy\.(?<tld>(io|com))$;

    set_real_ip_from 0.0.0.0/0;
    real_ip_header X-Forwarded-For;
    real_ip_recursive on;

    access_log /var/log/nginx/access.log elb_log;

    location / {
      proxy_set_header        Host reverse.$environment.verygoodproxy.$tld;
      proxy_set_header        Via terminator;
      proxy_set_header        X-Forwarded-Host $host;
      proxy_set_header        X-Real-IP $remote_addr;
      proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header        VGS-Tenant $tenant;
      resolver                8.8.8.8;
      set                     $vault                                          https://reverse.$environment.verygoodproxy.$tld;
      proxy_pass              $vault;
      proxy_read_timeout      90;
    }
}

server {
    listen              80 default_server;
    server_name         _;

    rewrite ^/$ {{ cert_mgr_url }}/docs/http.html redirect;

    location /.well-known/acme-challenge/ {
      resolver                8.8.8.8;
      set $cert_manager       {{ cert_mgr_url }};
      proxy_pass              $cert_manager;
      proxy_read_timeout      90;
    }
}
